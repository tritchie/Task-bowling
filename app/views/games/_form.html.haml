= form_for(@game) do |f|
  -if @game.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@game.errors.count, "error")
        prohibited this game from being saved:

      %ul
        -@game.errors.full_messages.each do |msg|
          %li
            = msg
  = f.label :current_frame
  %br
  = f.text_field :current_frame
  %div.actions
    = f.submit
