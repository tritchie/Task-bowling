-frame = {:class => 'frame'}
-frame[:bgcolor] = 'yellow' if @game.current_frame == @frameiterator
%td{frame}
  %table
    %tr
      %td.box1
        = boxes[0]
      %td.box2
        = boxes[1]
    %tr
      %td.total{:colspan => 2}
        = @frame.total
    %tr
      %td.extras{:colspan => 2}
        = link_to 'Edit', edit_frame_path(@frame)
