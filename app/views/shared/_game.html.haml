%h1 Welcome to life bowling!
%table.scorecard
  %tr
    %td.day{:colspan => '2', :align => 'center'}
      MON
    %td.day{:colspan => '2', :align => 'center'}
      TUE
    %td.day{:colspan => '2', :align => 'center'}
      WED
    %td.day{:colspan => '2', :align => 'center'}
      THU
    %td.day{:colspan => '2', :align => 'center'}
      FRI
  %tr
    -@frameiterator = 1
    -@game.frames.each do |frame|
      -@frame = frame
      =render :partial => 'shared/frame'
      -@frameiterator = @frameiterator + 1
= link_to 'CLEAR GAME', 'cleargame', :confirm => 'This will ruin your current game.  You sure?'
%br
%br
%h1 Next Tasks:
=render :partial => 'shared/task', :collection => @tasks
= link_to 'New Task', new_task_path
<p id="notice">
= notice

<p>
<b>Current frame:</b>
= @game.current_frame
</p>


= link_to 'Edit', edit_game_path(@game)
= link_to 'Back', games_path
